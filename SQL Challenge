create database Assignment;
use Assignment;
create table city
(
    Id int,
    Name varchar(17),
    Countrycode varchar(3),
    District varchar(20),
    Population int
 );

Insert into city values(6, 'ROTTERDAM', 'NLD', 'ZUID-HOLLAND', 593321);
